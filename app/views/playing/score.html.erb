<div class="wrapper">
  <div class="content">
    <h1>Longest word game</h1>
    <h3>You tried to score with the word:</h3>
    <p>
      "<%= @attempt %>"
    </p>
    <p>
      <%= @message %>
    </p>
    <p>
      Your score is: <%= @score %>
    </p>

    <form action="game" method="get">
      <div class="form-group">
        <input type="hidden" name="score" value="@score">
        <input type="submit" class="btn btn-default" value="New attempt!">
      </div>
    </form>
  </div>
</div>
